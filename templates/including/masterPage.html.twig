<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{% block title %}Welcome!{% endblock %} </title>
  <link rel="shortcut icon" type="image/png" href="{{ asset('assets/images/logos/dark-logo.png') }}" />
  <link rel="stylesheet" href="{{ asset('assets/css/styles.min.css') }}" />
  <script src="https://kit.fontawesome.com/a1820a8459.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.3.0/main.min.css" integrity="sha256-uq9PNlMzB+1h01Ij9cx7zeE2OR2pLAfRw3uUUOOPKdA=" crossorigin="anonymous">
  {% block head %} {% endblock %}
  {% block stylesheets %} {% endblock %}
</head>

<body>
  <!--  Body Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">
    <!-- Sidebar Start -->
    <aside class="left-sidebar">
      <!-- Sidebar scroll-->
      <div>
        <div class="brand-logo d-flex align-items-center justify-content-between">
          <a href="{{ path('app_accueil') }}" class="text-nowrap logo-img">
            <img src="{{ asset('assets/images/logos/dark-logo.png') }}" width="180" alt="" />
          </a>
          <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
            <i class="ti ti-x fs-8"></i>
          </div>
        </div>
        <!-- Sidebar navigation-->
        <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
          <ul id="sidebarnav">
            <li class="nav-small-cap">
              <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
              <span class="hide-menu">Listes</span>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" href="{{ path('app_accueil') }}" aria-expanded="false">
                <span>
                  <i class="ti ti-layout-dashboard"></i>
                </span>
                <span class="hide-menu">Accueil</span>
              </a>
            </li>
            <li class="nav-small-cap">
              <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
              <span class="hide-menu">Ajouter</span>
            </li>
            {% if (app.user.roles[0] != 'ROLE_ELEVE' and app.user.roles[0] != 'ROLE_TUTEUR') %}
              {% if (app.user.roles[0] == 'ROLE_SUPERADMIN') %}
                <li class="sidebar-item">
                  <a class="sidebar-link" href="{{ path('admins_by_role' , { 'role':'admin' }) }}" aria-expanded="false">
                    <span>
                      <i class="ti ti-article"></i>
                    </span>
                    <span class="hide-menu">Compte Admin</span>
                  </a>
                </li>
              {% endif %}

              {% if app.user.roles[0] == 'ROLE_AdMIN' or app.user.roles[0] == 'ROLE_SUPERADMIN' %}
                <li class="sidebar-item">
                  <a class="sidebar-link" href="{{ path('admins_by_role' , {'role':'direct'}) }}" aria-expanded="false">
                    <span>
                      <i class="ti ti-article"></i>
                    </span>
                    <span class="hide-menu">Compte Directeur</span>
                  </a>
                </li>
              {% endif %}
              {% if app.user.roles[0] == 'ROLE_DIRECTEUR' %}
                <li class="sidebar-item">
                  <a class="sidebar-link" href="{{ path('admins_by_role' , {'role':'ROLE_ADMINISTRATEUR'}) }}" aria-expanded="false">
                    <span>
                      <i class="ti ti-article"></i>
                    </span>
                    <span class="hide-menu">Compte Administrateur</span>
                  </a>
                </li>
              {% endif %}
              {% if app.user.roles[0] == 'ROLE_ADMIN' or app.user.roles[0] == 'ROLE_DIRECTEUR' %}
                <li class="sidebar-item">
                  <a class="sidebar-link" href="{{ path('admins_by_role' , {'role':'EP'}) }}" aria-expanded="false">
                    <span>
                      <i class="ti ti-article"></i>
                    </span>
                    <span class="hide-menu">Compte Encadrant Péda.</span>
                  </a>
                </li>
              {% endif %}
              {% if app.user.roles[0] == 'ROLE_ADMIN' %}
                <li class="sidebar-item">
                  <a class="sidebar-link" href="{{ path('admins_by_role' , {'role':'ensei'}) }}" aria-expanded="false">
                    <span>
                      <i class="ti ti-article"></i>
                    </span>
                    <span class="hide-menu">Compte Enseignant</span>
                  </a>
                </li>
              {% endif %}
              {% if app.user.roles[0] == 'ROLE_ADMINISTRATEUR' %}
                <li class="sidebar-item">
                  <a class="sidebar-link" href="{{ path('eleves') }}" aria-expanded="false">
                    <span>
                      <i class="ti ti-article"></i>
                    </span>
                    <span class="hide-menu">Compte Elève</span>
                  </a>
                </li>
                <li class="sidebar-item">
                  <a class="sidebar-link" href="{{ path('tuteurs') }}" aria-expanded="false">
                    <span>
                      <i class="ti ti-article"></i>
                    </span>
                    <span class="hide-menu">Compte Tuteur</span>
                  </a>
                </li>
              {% endif %}
              {% if app.user.roles[0] == 'ROLE_ENCADREMENTP'  %}
              <li class="sidebar-item">
                <a class="sidebar-link" href="{{ path('app_suivi_index') }}" aria-expanded="false">
                  <span>
                    <i class="ti ti-article"></i>
                  </span>
                  <span class="hide-menu">Suivi Pédagogique</span>
                </a>
              </li>
              {% endif %}
            {% endif %}
            <li class="sidebar-item">
              <a class="sidebar-link" href="{{ path('app_main') }}" aria-expanded="false">
                <span>
                  <i class="ti ti-article"></i>
                </span>
                <span class="hide-menu">Calendrier</span>
              </a>
            </li>
            <li class="sidebar-item">
              <a  class="sidebar-link" href="{{ path('app_note') }}" class="dropdown-toggle" data-bs-toggle="dropdown">
                <span> 
                  <i class="ti ti-article"></i>
                </span>
                <span class="hide-menu">Notes</span>
              </a>
              <ul class="dropdown-menu">
                  <li><a href="{{ path('app_note') }}" class="dropdown-item">Par éléve</a></li>
                  <li><a class="dropdown-item" href="#">Par classe</a></li>
                  <li><a class="dropdown-item" href="#">Import et Export</a></li>
              </ul>
            </li>
          </ul>
        </nav>
        <!-- End Sidebar navigation -->
      </div>
      <!-- End Sidebar scroll-->
    </aside>
    <!--  Sidebar End -->
    <!--  Main wrapper -->
    <div class="body-wrapper">
      <!--  Header Start -->
      <header class="app-header">
        <nav class="navbar navbar-expand-lg navbar-light">
          <ul class="navbar-nav">
            <li class="nav-item d-block d-xl-none">
              <a class="nav-link sidebartoggler nav-icon-hover" id="headerCollapse" href="javascript:void(0)">
                <i class="ti ti-menu-2"></i>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link nav-icon-hover" href="javascript:void(0)">
                <i class="ti ti-bell-ringing"></i>
                <div class="notification bg-primary rounded-circle"></div>
              </a>
            </li>
          </ul>
          <div class="navbar-collapse justify-content-end px-0" id="navbarNav">
            <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-end">
              <li class="nav-item dropdown">
                <a class="nav-link nav-icon-hover" href="javascript:void(0)" id="drop2" data-bs-toggle="dropdown"
                  aria-expanded="false">
                  <p class="m-2" style="font-size:16px;"> {{ app.user.email|slice(0,(app.user.email|length)-10) }} </p><img src="uploads/profile/{{app.user.photo}}" alt="" width="35" height="35" class="rounded-circle">
                </a>
                <div class="dropdown-menu dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="drop2">
                  <div class="message-body">
                    <a href="{{ path('app_profile') }}" class="d-flex align-items-center gap-2 dropdown-item">
                      <i class="ti ti-user fs-6"></i>
                      <p class="mb-0 fs-3">Mon compte</p>
                    </a>
                    <a href="{{ path('app_logout') }}" class="btn btn-outline-primary mx-3 mt-2 d-block">Déconnexion</a>
                  </div>
                </div>
              </li>
            </ul>
          </div>
        </nav>
      </header>
      <!--  Header End -->
      <div class="container-fluid">
        {% block body %}

        {% endblock %}
      </div>
    </div>
  </div>
  <script src="{{ asset('assets/libs/jquery/dist/jquery.min.js') }}"></script>
  <script src="{{ asset('assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js') }}"></script>
  <script src="{{ asset('assets/js/sidebarmenu.js') }}"></script>
  <script src="{{ asset('assets/js/app.min.js') }}"></script>
  <script src="{{ asset('assets/libs/apexcharts/dist/apexcharts.min.js') }}"></script>
  <script src="{{ asset('assets/libs/simplebar/dist/simplebar.js') }}"></script>
  <script src="{{ asset('assets/js/dashboard.js') }}"></script>
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.3.0/main.min.js" integrity="sha256-DBxkGZLxKsLKhz054qUpBqtotG00r9AELGpSigJujLg=" crossorigin="anonymous"></script>
  {% block javascripts %}{% endblock %}
</body>

</html>

