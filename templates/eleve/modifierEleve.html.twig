{% extends 'including/masterPage.html.twig'  %}
{% block body %}
          <div class="card">
            <div class="card-body">
              <h5 class="card-title fw-semibold mb-4">El√©ves</h5>
              <div class="card">
                <div class="card-body">
                  {{ form_errors(registrationForm) }}

                  <form method="post">

                      {{ form_widget(registrationForm._token) }}
                      {{ form_row(registrationForm.codeMassar) }}
                      {{ form_row(registrationForm.nom) }}
                      
                      {{ form_row(registrationForm.prenom) }}
                      {% if form_errors(registrationForm.prenom) %}
                          <div style="color: red;">
                              {% for error in  registrationForm.prenom.vars.errors  %}
                                  {{ error.message }}
                              {% endfor %}
                          </div>
                      {% endif %}
                      {{ form_row(registrationForm.email) }}
                      {{ form_row(registrationForm.adresse) }}
                      {{ form_row(registrationForm.dateNaissance) }}
                      {{ form_row(registrationForm.lieuNaissance) }}
                      {{ form_row(registrationForm.sexe) }}
                      {{ form_row(registrationForm.tel) }}
                      
                       {# {{ form_row(registrationForm._token) }} #}
                      <button type="submit" class="btn btn-primary mt-3">Modifier</button>
                    </form>
                </div>
              </div>
            </div>
          </div>
{% endblock %}  