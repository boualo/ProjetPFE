{% extends 'including/masterPage.html.twig'  %}
{% block head %}
   <link
      href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
{% endblock %}
{% block body %}
          <div class="card">
            <div class="card-body">
              <h5 class="card-title fw-semibold mb-4 " style="float:left;">Eléves</h5>
              <p>
                <a href="{{ path('add_eleve') }}" type="button" class="btn btn-outline-secondary" style="float:right;">Ajout</a>
              </p>
              <div class="card mt-5">
                <div class="card-body">
                {% for eleve in eleves %}
                  <div class="col-md-3">
                    <div class="card" style="width:100%;height:95%;">
                      <img src="../assets/images/profile/user-1.jpg" style="max-height:25%;" alt="..." >
                      <div class="card-body" style="height:10%">
                        <p class="card-title m-0 p-0" style="font-size:15px;">
                          <b>Nom : </b>{{eleve.nom}}
                          <b>Prénom : </b>{{eleve.prenom}}
                          <b>CNE : </b>{{eleve.codeMassar}}
                        </p>
                        <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-right">
                          <a href="{{ path('eleve' , {id:eleve.id}) }}">
                            <li>
                              <i class="fa fa-eye" aria-hidden="true" style="color:primary"></i>
                            </li>
                          </a>
                          <a href="#" data-bs-toggle="modal" data-bs-target="#myModal{{eleve.id }}" class="ms-3">
                            <li>
                              <i class="fa fa-trash" aria-hidden="true" style="color:red"></i>
                            </li>
                          </a>
                          <a href="{{ path('edit_eleve' , {id:eleve.id}) }}" class="ms-3">
                            <li>
                              <i class="fa fa-pencil-square-o" aria-hidden="true"style="color:green"></i>
                            </li>
                          </a>
                          <div class="modal fade" id="myModal{{eleve.id }}">
                            <div class="modal-dialog">
                              <div class="modal-content">
                                <!-- Modal body -->
                                <div class="modal-body">
                                  Voulez-vous vraiment supprimer cet élément?
                                </div>
                                <!-- Modal footer -->
                                <div class="modal-footer">
                                  <a type="button" class="btn btn-danger"  href="{{ path('delete_eleve',{id:eleve.id}) }}">Oui</a>
                                  <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Non</button>
                                </div>
                            </div>
                          </div> 
                        </ul>
                      </div>
                    </div>
                  </div>
                {% endfor %}
                </div>
              </div>
            </div>
          </div>
{% endblock %}  