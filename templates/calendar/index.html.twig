{% extends 'including/masterPage.html.twig' %}

{% block title %}Calendrier{% endblock %}

{% block body %}
    <h1>Calendrier</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Debut</th>
                <th>Fin</th>
                <th>Description</th>
                <th>Toute la journée</th>
                <th>Couleur de l'arrière plan</th>
                <th>Couleur de la bordure</th>
                <th>Couleur de text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for calendar in calendars %}
            <tr>
                <td>{{ calendar.titre }}</td>
                <td>{{ calendar.debut ? calendar.debut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ calendar.fin ? calendar.fin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ calendar.description }}</td>
                <td>{{ calendar.allDay ? 'Yes' : 'No' }}</td>
                <td><div style="width:40px;height:25px;background-color:{{ calendar.backgroundColor }}"></div></td>
                <td><div style="width:40px;height:25px;background-color:{{ calendar.borderColor }}"></div></td>
                <td><div style="width:40px;height:25px;background-color:{{ calendar.textColor }}"></div></td>
                <td>
                    <a href="{{ path('app_calendar_show', {'id': calendar.id}) }}" class="link-info">
                        <i class="fa fa-eye m-3" aria-hidden="true"style="color:blue"></i>
                    </a>
                    <a href="{{ path('app_calendar_edit', {'id': calendar.id}) }}" class="link-success">
                        <i class="fa fa-pencil-square-o" aria-hidden="true"style="color:green"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Pas d'enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_calendar_new') }}" class="btn btn-primary">Ajouter</a>
{% endblock %}
