{% extends 'including/masterPage.html.twig'  %}
{% block body %}
          <div class="card">
            <div class="card-body">
              <h5 class="card-title fw-semibold mb-4">Eléves</h5>
              <div class="card">
                <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Informations</button>
                        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Sécurité</button>
                        <button class="nav-link" id="nav-contact-tab" data-bs-toggle="tab" data-bs-target="#nav-contact" type="button" role="tab" aria-controls="nav-contact" aria-selected="false">Tuteur</button>
                    </div>
                </nav>

                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                     {{ form_errors(userForm) }}
                        {{ form_start(userForm) }}
                            <div class="row mt-3">
                                <div class="col-md-3 ms-2">
                                    <div class="card" >
                                        <img src="../assets/images/profile/user-1.jpg" style="max-height:25%;" alt="..." >
                                        <p class="card-title m-1 p-0" style="font-size:15px;text-align:center;">
                                            <b>CNE : {{app.user.codeMassar}}</b> 
                                             Changer l'image:
                                            {{ form_row(userForm.photo) }}
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-8 me-2">
                                    <div class="card" >
                                        <div class="tab-content" id="nav-tabContent">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="form-group col-md-4">
                                                       {{ form_row(userForm.nom) }}
                                                    </div>
                                                    <div class="form-group col-md-4">
                                                        {{ form_row(userForm.prenom) }}
                                                    </div>
                                                    <div class="form-group col-md-4">
                                                        {% if app.user.roles[0]=='ROLE_ELEVE' %}
                                                            {{ form_row(userForm.codeMassar) }}
                                                        {% else %}
                                                            {{ form_row(userForm.cin) }}
                                                        {% endif %}
                                                    </div>
                                                    <div class="form-group col-md-4">
                                                        {{ form_row(userForm.tel) }}
                                                    </div>
                                                    <div class="form-group col-md-4">
                                                        {{ form_row(userForm.dateNaissance) }}
                                                    </div>
                                                    <div class="form-group col-md-4">
                                                        {{ form_row(userForm.lieuNaissance) }}
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        {{ form_row(userForm.email) }}
                                                        {{ form_row(userForm.sexe) }}
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        {{ form_row(userForm.adresse) }}
                                                    </div>
                                                </div>
                                                 {{ form_row(userForm._token) }}
                                                <div class="row mt-2" style="float:right">
                                                    <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-right">
                                                        <a href="#" data-bs-toggle="modal" data-bs-target="#myModal{{app.user.id }}" class="ms-3">
                                                            <li>
                                                            <i class="fa fa-trash" aria-hidden="true" style="color:red"></i>
                                                            </li>
                                                        </a>
                                                        <input type="submit" class="btn btn-primary ms-3" value="Modifier"/>
                                                        <div class="modal fade" id="myModal{{app.user.id }}">
                                                            <div class="modal-dialog">
                                                                <div class="modal-content">
                                                                    <!-- Modal body -->
                                                                    <div class="modal-body">
                                                                        Voulez-vous vraiment supprimer cet élément?
                                                                    </div>
                                                                    <!-- Modal footer -->
                                                                    <div class="modal-footer">
                                                                        <a type="button" class="btn btn-danger"  href="">Oui</a>
                                                                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Non</button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div> 
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">profike</div>
                    <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">...</div>
                </div>
              </div>
            </div>
          </div>
 {% endblock %} 